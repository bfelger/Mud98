    "configurations": [
        {
            "name": "Mud98 [Original ROM]",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${command:cmake.buildType}/Mud98",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
